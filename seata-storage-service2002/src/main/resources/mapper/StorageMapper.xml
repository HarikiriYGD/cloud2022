<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swjtu.springcloud.dao.StorageDao">

    <resultMap id="BaseResultMap" type="com.swjtu.springcloud.domain.Storage">
        <id column="id" property="id" jdbcType="BIGINT"></id>
        <result column="product_id" property="productId" jdbcType="BIGINT"></result>
        <result column="total" property="total" jdbcType="INTEGER"></result>
        <result column="used" property="used" jdbcType="INTEGER"></result>
        <result column="residue" property="residue" jdbcType="INTEGER"></result>
    </resultMap>

    <!--int decrease(@Param("productId") Long productId, @Param("count") Integer count);-->
    <update id="decrease">
        update t_storege
        set used = used + #{count}, residue = residue - #{count}
        where product_id = #{productId};
    </update>

</mapper>